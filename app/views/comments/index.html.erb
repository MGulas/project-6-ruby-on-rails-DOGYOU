<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Recipient</th>
      <th>Project</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.creator == current_user.email_address ? comment.creator : "Anonymous" %></td>
        <td><%= comment.recipient %></td>
        <td><%= comment.project_id %></td>
        <td><%= comment.comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) if current_user.email_address == comment.creator %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } if current_user.email_address == comment.creator %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
