<p id="notice"><%= notice %></p>

<h1>My Projects</h1>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<p>
  <% current_user.teams.each do |team| %>
    <% team.projects.each do |project| %>
      <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#<%= project.p_name.delete(' ') %><%= project.p_number %>" 
      aria-expanded="false" aria-controls="<%= project.p_name.delete(' ')  %><%= project.p_number %>"><%= project.p_name %></button>
    <% end %>
  <% end %>
</p>
<div class="row">
  <% current_user.teams.each do |team| %>
    <% team.projects.each do |project| %>
      <div class="col">
        <div class="collapse multi-collapse" id="<%= project.p_name.delete(' ')  %><%= project.p_number %>">
          <div class="card card-body">
            <% if project.comments.size > 0 %>
              Comments:
              <ul>
                <% for comment in project.comments %>
                  <li><%= comment.comment %></li>
                <% end %>
              </ul>
            <% else %>
              No Comments Yet!
            <% end %>
            <% if project.scores.size > 0 %>
              Score: <% for score in project.scores %>
                      <%= score.score.to_s %></li>
                     <% end %>
            <% else %>
              No Scores Yet!
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to 'Back', users_path %>