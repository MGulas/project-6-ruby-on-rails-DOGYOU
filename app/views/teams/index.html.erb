<p id="notice"><%= notice %></p>

 <div class="page-header">
  <h1 class="well well-lg profile-text"> Teams </h1>
</div><br><br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Team number</th>
      <th scope="col">Team name</th>
      <th scope="col">Project</th>
      <th colspan="3", scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr scope="row">
        <td><%= team.team_number %></td>
        <td><%= team.team_name %></td>
        <td>
          <% for project in team.projects %>
            <%= project.p_name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', team, class: "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_team_path(team), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path, class: "btn btn-primary" %>
