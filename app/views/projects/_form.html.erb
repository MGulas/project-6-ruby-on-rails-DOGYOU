<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :project_number %>
    <%= form.number_field :p_number %>
  </div>

  <div class="field">
    <%= form.label :project_name %>
    <%= form.text_field :p_name %>
  </div>

  <div class="field">
    <%= form.label "Add Teams" %><br />
    <%= form.collection_check_boxes :team_ids, Team.all, :id, :team_name do |box| %>
      <div class="collection-check-box">
        <%= box.check_box %>
        <%= box.label %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
